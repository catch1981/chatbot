# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# 3D Generation Services
STABILITY_API_KEY=your-stability-ai-api-key-here
REPLICATE_API_TOKEN=your-replicate-api-token-here

# Local 3D Generation (Optional)
LOCAL_3D_ENABLED=false
LOCAL_3D_ENDPOINT=http://localhost:8000

# Database Configuration (for future use)
MONGODB_URI=mongodb://localhost:27017/realtime-chatbot
REDIS_URL=redis://localhost:6379

# File Storage
UPLOAD_MAX_SIZE=10485760
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourapp.com

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_3D_GENERATIONS=5
AI_REQUEST_TIMEOUT=30000